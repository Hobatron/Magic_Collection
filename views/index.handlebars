<div id="login" style="font-weight:bold">
    <h3 class="text-center text-white">Welcome!</h3>
    <div class="container">

        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Please remember, this site is not safe, consider your
                            passwords public</h3>
                        <div>
                            {{#if badUserPass}}
                                <h5 id="badUser" class="text-danger">
                                    Bad user name or password
                                </h5>
                            {{/if}}
                        </div>
                        <div id="userCreated" style="display:none">
                            <h5 class="text-success">
                                Account Created!
                            </h5>
                        </div>
                        <div class="form-group">
                            <label for="username" class="text-info">Username:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Password:</label><br>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" id="submit" class="btn btn-info btn-md">
                        </div>
                        <button id="register-link" type="button" class="btn-md btn btn-info float-right"
                            data-toggle="modal" data-target="#loginModal">
                            Register Here
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog"
        aria-labelledby="loginModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div id="userExists" style="display:none">
                            <h5 class="text-danger">
                                Username already taken!
                            </h5>
                        </div>
                        <div id="badPass" style="display:none">
                            <h5 class="text-danger">
                                Password must have: min 5 max 15 chars, 1 num, 1 upper, no spaces.
                            </h5>
                        </div>
                        <div class="form-group">
                            <label for="createUsername">Username:</label>
                            <input type="text" class="form-control" id="createUsername" placeholder="Kaboo">
                        </div>
                        <div class="form-group">
                            <label for="createPassword">Password:</label>
                            <input type="password" class="form-control" id="createPassword" placeholder="">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="createAccount" type="button" class="btn btn-info">Create!</button>
                </div>
            </div>
        </div>
    </div>
</div>